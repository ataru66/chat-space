.chat-main
  .chat-main__header
    .chat-main__header__group-info
      .chat-main__header__group-info__group-name
        chatspace
      %ul.chat-main__header__group-info__member-list
        Member :
        - @group.users.each do |user|
          %li.chat-main__header__group-info__member-list__member
            = user.name
      .edit-btn
        Edit
  .chat-main__message-list
    = render partial: "message", collection: @messages
  .chat-main__message-form
    %form.chat-main__message-form__form-box
      .chat-main__message-form__form-box__message-box
        %input{type: "text", placeholder: "type a message", class: 'chat-main__message-form__form-box__message-box__form'}
        %label
          = icon('fas', 'image')
          %input{type: "file", class: 'chat-main__message-form__form-box__message-box__file-select'}
      %input{type: "submit", value: "Send", class: 'chat-main__message-form__form-box__send-btn'}
