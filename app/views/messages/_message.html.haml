%div.chat-main__message-list__message-box{data: {message: {id: message.id}}}
  .chat-main__message-list__message-box__info
    .chat-main__message-list__message-box__info__member-name
      = message.user.name
    .chat-main__message-list__message-box__info__date-and-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__message-box__messages
    - if message.content.present?
      %p.chat-main__message-list__message-box__messages__content
        = message.content
    = image_tag message.image.url, class: 'chat-main__message-list__message-box__messages__image' if message.image.present?